@model IEnumerable<App_CCP.Models.NewsItem>
@{
    ViewData["Title"] = "Gestionare noutăți";
}

<h2 class="mb-4">Noutăți</h2>

<a class="btn btn-success mb-3" asp-action="Create"><i class="fas fa-plus"></i> Adaugă noutate</a>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Titlu</th>
            <th>Activă</th>
            <th>Data creării</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@(item.IsActive ? "Da" : "Nu")</td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>
                    @if (User.IsInRole("Admin") || (User.Identity?.Name?.Equals(item.Owner?.Email) ?? false))
                    {
                        <a class="btn btn-sm btn-primary me-2" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i> Editează
                        </a>
                        <a class="btn btn-sm btn-secondary" asp-action="ToggleActive" asp-route-id="@item.Id">
                            <i class="fas fa-ban"></i>
                            @(item.IsActive ? "Dezactivează" : "Activează")
                        </a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                              style="display:inline;"
                              onsubmit="return confirm('Ești sigur că vrei să ștergi această noutate?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Șterge
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="container text-end mt-4 mb-5">
    <button type="button" class="btn btn-outline-secondary back-button">
        <i class="fas fa-undo"></i> Înapoi
    </button>
</div>

