@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Instrumente administrare</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Gestionare Utilizatori</h5>
            </div>
            <div class="card-body">
                <p>Vizualizare și gestionare utilizatori </p>
                <a asp-controller="Admin" asp-action="UserList" class="btn btn-primary">Gestionare Utilizatori</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Gestionare Roluri</h5>
            </div>
            <div class="card-body">
                <p>Atribuire roluri și permisiuni utilizatori</p>
                <!-- Placeholder for a future action -->
                <a asp-controller="Admin" asp-action="ManageRoles" class="btn btn-primary">Gestionare Roluri</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Statistici</h5>
            </div>
            <div class="card-body">
                <p>Statistici privind utilizarea aplicației.</p>
                <!-- Link activ către pagina de statistici -->
                <a asp-controller="Admin" asp-action="Statistics" class="btn btn-primary">Vezi statistici</a>
            </div>
        </div>
    </div>
</div>


