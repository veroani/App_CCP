﻿@using App_CCP.View_Models;
@model AboutCCPViewModel;

<h1>@Model.Titlu</h1>
<p>@Model.Descriere</p>

<div style="text-align: left;">
    <img src="@Model.ImagineUrl" alt="Imagine" style="max-width: 40%; height: auto;" />
</div>

<h3>Avantaje:</h3>
<ul>
    @foreach (var avantaj in Model.Avantaje)
    {
        <li>@avantaj</li>
    }
</ul>

<div class="container text-end mt-4 mb-5">
@if (User.IsInRole("Admin"))
{
        <a href="@Url.Action("Edit", "AboutCCP")" class="btn btn-sm btn-primary me-2">
            <i class="fas fa-edit"></i> Editează
        </a>
}
</div>