@model Partners

<h2>Modifică profilul tău de partener</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="EditOwnProfile" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountDetails"></label>
        <input asp-for="DiscountDetails" class="form-control" />
        <span asp-validation-for="DiscountDetails" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Schimbă logo (opțional)</label>
        <input type="file" name="LogoFile" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.LogoUrl))
    {
        <p>Logo actual:</p>
        <img src="@Model.LogoUrl" style="max-height: 100px;" />
    }

    <div class="form-group">
        <label asp-for="WebsiteUrl"></label>
        <input asp-for="WebsiteUrl" class="form-control" />
        <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvează</button>
</form>
