@model List<Partners>
@{
    ViewData["Title"] = "Gestionare Parteneri";
}

<h2 class="mb-4">Gestionare Parteneri</h2>



<form method="get" asp-action="Manage" class="mb-4">
    <div class="d-flex justify-content-between flex-wrap gap-2">
        <!-- Grup stânga: input + căutare + resetare -->
        <div class="input-group" style="max-width: 500px;">
            <input type="text" name="searchQuery" class="form-control" placeholder="Caută partener după nume..." value="@Context.Request.Query["searchQuery"]" />

            <button class="btn btn-outline-secondary" type="submit">
                <i class="fas fa-search"></i>
            </button>

            <a asp-action="Manage" class="btn btn-outline-dark">
                <i class="fas fa-sync-alt"></i>
            </a>
        </div>

        <!-- Grup dreapta: buton Adaugă -->
        <div>
            <a asp-action="AddPartner" class="btn btn-success">
                <i class="fas fa-plus"></i> Adaugă Partener
            </a>
        </div>
    </div>
</form>


<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Nume</th>
            <th>Descriere</th>
            <th>Reducere</th>
            <th>Website</th>
            <th class="text-nowrap text-center">Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-center">Nu există parteneri care corespund căutării.</td>
            </tr>
        }
        else
        {
            @foreach (var partner in Model)
            {
                <tr>
                    <td>@partner.Name</td>
                    <td>@partner.Description</td>
                    <td>@partner.DiscountDetails</td>
                    <td>
                        @if (!string.IsNullOrEmpty(partner.WebsiteUrl))
                        {
                            <a href="@partner.WebsiteUrl" target="_blank">@partner.WebsiteUrl</a>
                        }
                    </td>
                    <td class="text-center">
                        <div class="d-flex flex-column align-items-center gap-2">
                            <a asp-action="EditPartner" asp-route-id="@partner.Id" class="btn btn-sm btn-primary me-2">
                                <i class="fas fa-edit"></i> Editează
                            </a>
                            <form asp-action="DeletePartner" asp-route-id="@partner.Id" method="post" onsubmit="return confirm('Sigur vrei să ștergi acest partener?');" class="w-100">
                                <button type="submit" class="btn btn-sm btn-danger me-2">
                                    <i class="fas fa-trash-alt"></i> Șterge
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
